{
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.component-test.tsbuildinfo",
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "types": [
            "vitest/globals",
            "@testing-library/jest-dom"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@test/*": [
                "./test/*"
            ]
        }
    },
    "include": [
        "test/component",
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}